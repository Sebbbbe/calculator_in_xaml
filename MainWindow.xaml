<Window x:Class="calculater_training.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculater_training"
        mc:Ignorable="d"
        Title="Calculator" Height="510" Width="335">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
           
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.ColumnSpan="4" FontSize="30" TextAlignment="right" VerticalAlignment="Bottom" IsReadOnly="True" BorderThickness="0"    >0</TextBox>
        
        <!-- Numbers-->
        <Button Grid.Column="0" Grid.Row="3">7</Button>
        <Button Grid.Column="1" Grid.Row="3">8</Button>
        <Button Grid.Column="2" Grid.Row="3">9</Button>

        <Button Grid.Column="0" Grid.Row="4">4</Button>
        <Button Grid.Column="1" Grid.Row="4">5</Button>
        <Button Grid.Column="2" Grid.Row="4">6</Button>

        <Button Grid.Column="0" Grid.Row="5">1</Button>
        <Button Grid.Column="1" Grid.Row="5">2</Button>
        <Button Grid.Column="2" Grid.Row="5">3</Button>


        <Button Grid.Column="1" Grid.Row="6">0</Button>
        
        
        <!--Math Operators-->


        <Button Grid.Column="3" Grid.Row="2">÷</Button>
        <Button Grid.Column="3" Grid.Row="3">X</Button>
        <Button Grid.Column="3" Grid.Row="4">-</Button>
        <Button Grid.Column="3" Grid.Row="5">+</Button>
        <Button Grid.Column="3" Grid.Row="6">=</Button>
        
        
        <!--Extras -->

        <Button Grid.Column="2" Grid.Row="6">.</Button>
        
        
        <!-- plus-minus Button-->
        <Button Grid.Column="0" Grid.Row="6">+/-</Button>


        <!--Rest button-->
        <Button Grid.Column="0" Grid.Row="1">%</Button>
        
        
        <!-- Reset Buttons? -->
 
        <Button Grid.Column="1" Grid.Row="1">CE</Button>
        <Button Grid.Column="2" Grid.Row="1">C</Button>
        <Button Grid.Column="3" Grid.Row="1" >Back</Button>
        
        
        
         <!-- Special operators-->
        <Button Grid.Column="0" Grid.Row="2">1/x</Button>
        <Button Grid.Column="1" Grid.Row="2" >x²</Button>
        <Button Grid.Column="2" Grid.Row="2" >√2</Button>
       


    </Grid>
</Window>
